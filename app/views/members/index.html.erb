<%= turbo_frame_tag('members-turbo-frame') do %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center">
      <h2 class="font-bold text-2xl">Members</h2>
      <%= link_to "New member", new_member_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>

    <div class="my-3">
      <%= paginate @members %>
    </div>

    <div id="members" class="min-w-full">
      <% @members.each do |member| %>
        <div class="grid grid-cols-2 items-center">
          <%= render 'member', member: member %>
          <div>
            <%= link_to "Show this member", member, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { turbo_frame: '_top' } %>
          </div>
        </div>
        <hr class="mt-6">
      <% end %>
    </div>

    <div class="my-3">
      <%= paginate @members %>
    </div>
  </div>
<% end %>
